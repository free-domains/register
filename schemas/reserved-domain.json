{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "$schema": {
            "type": "string",
            "description": "Path to the schema file"
        },
        "domain": {
            "type": "string",
            "enum": ["is-a-backend.dev", "is-a-frontend.dev"]
        },
        "subdomain": {
            "type": "string",
            "pattern": "^([a-z0-9_*.-]{1,63}|@)$"
        },
        "records": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "A": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "minProperties": 2,
                        "maxProperties": 2
                    }
                },
                "AAAA": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "minProperties": 2,
                        "maxProperties": 2
                    }
                },
                "CNAME": {
                    "type": "object",
                    "minProperties": 2,
                    "maxProperties": 2
                },
                "MX": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "minProperties": 2,
                        "maxProperties": 2
                    }
                },
                "NS": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "minLength": 3,
                        "pattern": "^[a-z0-9._-]{3,}$"
                    }
                },
                "TXT": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "minProperties": 2,
                        "maxProperties": 2
                    }
                }
            },
            "anyOf": [
                { "required": ["A"] },
                { "required": ["AAAA"] },
                { "required": ["CNAME"] },
                { "required": ["MX"] },
                { "required": ["NS"] },
                { "required": ["TXT"] }
            ]
        }
    },
    "required": ["$schema", "domain", "subdomain", "records"]
}
